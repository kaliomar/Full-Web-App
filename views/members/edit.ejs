<% include ../partials/header%>
<div class="container">
  <div class="row">
    <div style="width: 30%; margin: 50px auto">
    <form action="/members/<%=member._id%>?_method=PUT" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" value="<%=member.name%>" name="member[name]">
      </div>
      <div class="form-group">
        <input class="form-control" type="number" value="<%=member.price%>" name="member[price]" min="0.01" step="0.01">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" value="<%=member.age%>" name="member[age]">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" value="<%=member.gender%>" name="member[gender]">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" value="<%=member.image%>" name="member[image]">
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-block form-control">Submit</button>
      </div>
      </form>
    </div>
  </div>
</div>



<% include ../partials/footer%>
